{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/outputECP",
    "$COMPONENTS_DIR": "$BASE_DIR/components"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 5000.0,
    "dt": 0.1,
    "dL": 200000.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 31.0,
    "v_init": -70.0
  },
  "inputs": {
    "tone_spikes": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$BASE_DIR/tone_spikes.csv",
      "node_set": "tone"
    },
    "shock_spikes": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$BASE_DIR/shock_spikes.csv",
      "node_set": "shock"
    },
    "thalamus_pyr_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/thalamus_pyr_spikes.h5",
      "node_set": "thalamus_pyr"
    },
    "thalamus_pv_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/thalamus_pv_spikes.h5",
      "node_set": "thalamus_pv"
    },
    "thalamus_som_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/thalamus_som_spikes.h5",
      "node_set": "thalamus_som"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "syn_report1": {
      "cells": {"node_ids":  [955, 257, 367, 231]},
      "variable_name": "W",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "tone2pyrD",
      "file_name": "syns_tone2pyr_should_change.h5"
    },
    "syn_report2": {
      "cells": {"node_ids":  [955, 257, 367, 231]},
      "variable_name": "capoolcon",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "tone2pyrD",
      "file_name": "syns_tone2pyr_should_change_cai.h5"
    },
    "v_report": {
      "variable_name": "v",
      "cells": {"node_ids":  [955, 257, 367, 231]},
      "module": "membrane_report",
      "sections": "soma"
    }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "$BASE_DIR/circuit_config.json"
}
