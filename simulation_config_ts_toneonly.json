{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/outputECP",
    "$COMPONENTS_DIR": "$BASE_DIR/components"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 10000.0,
    "dt": 0.1,
    "dL": 200000.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 31.0,
    "v_init": -70.0
  },
  "inputs": {
    "thalamus_pyr_A_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/thalamus_pyr_A_spikes.h5",
      "node_set": "thalamus_pyr_A"
    },
    "thalamus_pyr_C_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/thalamus_pyr_C_spikes.h5",
      "node_set": "thalamus_pyr_C"
    },
    "thalamus_pv_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/thalamus_pv_spikes.h5",
      "node_set": "thalamus_pv"
    },
    "thalamus_som_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/thalamus_som_spikes.h5",
      "node_set": "thalamus_som"
    },
    "thalamus_vip_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/thalamus_vip_spikes.h5",
      "node_set": "thalamus_vip"
    },
    "tone_spikes": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$BASE_DIR/inputs/tone_spikes.csv",
      "node_set": "tone"
    },
    "bg_TONE2PN_A_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/bg_TONE2PN_A_spikes.h5",
      "node_set": "tone_bg_pn_a"
    },
    "bg_TONE2PN_C_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/bg_TONE2PN_C_spikes.h5",
      "node_set": "tone_bg_pn_c"
    },
    "bg_TONE2PV_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/bg_TONE2PV_spikes.h5",
      "node_set": "tone_bg_pv"
    },
    "bg_TONE2VIP_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/bg_TONE2VIP_spikes.h5",
      "node_set": "tone_bg_vip"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "ecp": {
      "cells": "all",
      "variable_name": "v",
      "module": "extracellular",
      "electrode_positions": "$COMPONENTS_DIR/recXelectrodes/linear_electrode.csv",
      "file_name": "ecp.h5",
      "electrode_channels": "all"
