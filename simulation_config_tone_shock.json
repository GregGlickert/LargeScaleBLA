{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output_trials_tone_only",
    "$COMPONENTS_DIR": "$BASE_DIR/components"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 4000,
    "dt": 0.1,
    "dL": 200000.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 31.0,
    "v_init": -70.0
  },
  "inputs": {
    "thalamus_pyr_A_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/thalamus_pyr_A_spikes.h5",
      "node_set": "thalamus_pyr_A"
    },
    "thalamus_pyr_C_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/thalamus_pyr_C_spikes.h5",
      "node_set": "thalamus_pyr_C"
    },
    "thalamus_pv_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/thalamus_pv_spikes.h5",
      "node_set": "thalamus_pv"
    },
    "thalamus_som_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/inputs/thalamus_som_spikes.h5",
      "node_set": "thalamus_som"
    },
    "tone_spikes": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$BASE_DIR/inputs/tone_spikes_trials.csv",
      "node_set": "tone"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "ecp": {
      "cells": "all",
      "variable_name": "v",
      "module": "extracellular",
      "electrode_positions": "$COMPONENTS_DIR/recXelectrodes/linear_electrode.csv",
      "file_name": "ecp.h5",
      "electrode_channels": "all"
      },
      "syn_report": {
        "cells": "all",
        "variable_name": "W",
        "module": "netcon_report",
        "sections": "all",
        "syn_type": "AMPA_NMDA_STP_LTP_tone2PN",
        "file_name": "tone2PN.h5"
      },
      "syn_repor10": {
        "cells": "all",
        "variable_name": "igaba",
        "module": "netcon_report",
        "sections": "all",
        "syn_type": "shock2int",
        "file_name": "shock2int.h5"
      },
      "syn_report2": {
        "cells": "all",
        "variable_name": "effcai_GB",
        "module": "netcon_report",
        "sections": "all",
        "syn_type": "AMPA_NMDA_STP_LTP_tone2PN",
        "file_name": "tone2PN_cai.h5"
      },
      "syn_report3": {
        "cells": "all",
        "variable_name": "pot_GB",
        "module": "netcon_report",
        "sections": "all",
        "syn_type": "AMPA_NMDA_STP_LTP_tone2PN",
        "file_name": "tone2PN_pot_flag.h5"
      },
      "syn_report4": {
        "cells": "all",
        "variable_name": "dep_GB",
        "module": "netcon_report",
        "sections": "all",
        "syn_type": "AMPA_NMDA_STP_LTP_tone2PN",
        "file_name": "tone2PN_dep_flag.h5"
      }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "$BASE_DIR/circuit_simulation_config.json"
}
