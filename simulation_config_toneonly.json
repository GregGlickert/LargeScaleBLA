{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/outputECP",
    "$COMPONENTS_DIR": "$BASE_DIR/components"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 10000.0,
    "dt": 0.1,
    "dL": 200000.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 31.0,
    "v_init": -70.0
  },
  "inputs": {
    "tone_spikes": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "tone_spikes.csv",
      "node_set": "tone"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {},
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "$BASE_DIR/circuit_config.json"
}
