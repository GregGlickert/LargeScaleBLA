{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 15000.0,
    "dt": 0.05,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 31.0,
    "v_init": -70.0
  },
  "inputs": {
    "thalamus_pyr_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/input/thalamus_pyr_spikes.h5",
      "node_set": "thalamus_pyr"
    },
    "thalamus_som_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/input/thalamus_som_spikes.h5",
      "node_set": "thalamus_som"
    },
    "shell_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/input/shell_spikes.h5",
      "node_set": "shell"
    },
    "tone_spikes": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$BASE_DIR/input/tone_spikes_50.csv",
      "node_set": "tone"
    },
    "shock_spikes": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$BASE_DIR/input/shock_spikes.csv",
      "node_set": "shock"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "ecp": {
      "cells": "all",
      "variable_name": "v",
      "module": "extracellular",
      "electrode_positions": "$COMPONENTS_DIR/recXelectrodes/linear_electrode.csv",
      "file_name": "ecp.h5",
      "electrode_channels": "all"
      }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "$BASE_DIR/circuit_config.json"
}